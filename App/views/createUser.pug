    form.form(action="/createUser" method="POST")
      h2 Create User
      label(for="name") Name
      input(type="text" name="name")
      label(for="email") Email
      input(type="email" name="email")
      label(for="usertype") User Type
      select.form-control(type="usertype" name="usertype")
        option Select user type
        option Special (creates password and agrees to NDA)
        option Elite (link to go straight to main page)
